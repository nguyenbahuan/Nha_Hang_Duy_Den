<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/header_bill"
            android:background="@color/pink"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/txt_ma"
                android:layout_marginLeft="10dp"
                android:text="Mã hóa đơn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/bill_id"
                android:layout_marginLeft="10dp"
                android:text="1"
                android:layout_toRightOf="@id/txt_ma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/bill_date"
                android:layout_toRightOf="@+id/bill_id"
                android:layout_marginLeft="10dp"
                android:text="20-1-2002"
                android:layout_marginStart="150dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/header_bill"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/bill_table"
                android:text="Tên bàn"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/bill_total"
                android:layout_below="@+id/bill_table"
                android:layout_marginTop="20dp"
                android:text="10000"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:layout_toRightOf="@+id/bill_table"
                android:src="@drawable/mon_an"
                android:layout_marginLeft="120dp"
                android:layout_width="100dp"
                android:layout_height="100dp">
            </ImageView>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>